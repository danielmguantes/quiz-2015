<h2>Usuario</h2>

<p>
  <b>Username:</b>
  <%= user.username %>
</p>

<p>
  <b>Es Administrador:</b>
  <%= user.isAdmin ? "Si" : "No" %>
</p>
<p>
  <b>Quizzes creados:</b>
  <% for(var i in user.Quizzes){ %>
    <br><span style="padding-left:20px"><strong >Pregunta: </strong><a href="/quizzes/<%= user.Quizzes[i].id %>"><%= user.Quizzes[i].question %></a></span>
  <% } %>
</p>

<% if (session.user) { %>
  <p>
    <% if (session.user.isAdmin || session.user.id === user.id) { %>
      <a href="/users/<%= user.id %>/edit"> 
        <button type="button"> Editar </button>
      </a>
    <% } %>
    <% if (session.user.isAdmin && session.user.id !== user.id) { %>
      <a href="/users/<%= user.id %>?_method=DELETE"> 
        <button type="button"
              onClick="return confirm('Borrar cuenta: <%= user.username %>');">
          Borrar 
        </button>
      </a>
    <% } %>
  </p>
<% } %>

<a href="/users"> 
   <button type="button">Volver</button>
</a>